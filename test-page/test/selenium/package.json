{
  "name": "nwc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "default-dev": "nightwatch --env default -c conf/local.conf.js",
    "chrome-dev": "nightwatch --env chrome -c conf/local.conf.js",
    "firefox-dev": "nightwatch --env firefox -c conf/local.conf.js",
    "ie-dev": "nightwatch --env ie -c conf/local.conf.js",
    "chrome-prod": "PRODUCTION=true nightwatch --env chrome --skiptags dev-only -c conf/local.conf.js",
    "wip-dev": "nightwatch --env chrome --tag wip -c conf/local.conf.js",
    "wip-prod": "PRODUCTION=true nightwatch --env chrome --tag wip -c conf/local.conf.js",
    "precommit": "npm run lint",
    "prepush": "npm run chrome-dev",
    "commitmsg": "validate-commit-msg",
    "lint": "node_modules/.bin/eslint features/step_definitions",
    "local": "nightwatch -c conf/local.conf.js",
    "all": "node scripts/local.runner.js -c conf/browserstack.conf.js -e chrome,firefox,safari,ie",
    "browserstack-dev": "node scripts/local.runner.js -c conf/browserstack.conf.js -e chrome",
    "browserstack-prod": "PRODUCTION=true node scripts/local.runner.js -c conf/browserstack.conf.js -e chrome --skiptags dev-only"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "browserstack-local": "^1.3.0",
    "chromedriver": "^2.28.0",
    "cucumber": "^2.0.0-rc.9",
    "cucumber-html-reporter": "^0.4.0",
    "eslint-config-deepstream": "^2.2.1",
    "geckodriver": "^1.10.0",
    "husky": "^0.13.3",
    "nightwatch": "^0.9.14",
    "nightwatch-cucumber": "^7.1.0",
    "phantomjs-prebuilt": "^2.1.14",
    "selenium-server": "^3.3.1",
    "validate-commit-msg": "^2.11.2"
  },
  "eslintConfig": {
    "extends": "deepstream"
  }
}
